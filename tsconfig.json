{
  "compilerOptions": {
    //    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    //    common js (require) -> import modules
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
//    //    для eslinta, если ругается, //исправил в eslint   tsconfigRootDir: __dirname,
//    ".eslintrc.js",
//    "./src/**/*",
//    "./config/build/*",
//    "./config/jest/*",
//    "./.webpack.config.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
